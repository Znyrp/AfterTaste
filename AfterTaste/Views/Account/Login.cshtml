@{
}
@using AfterTaste.ViewModels;
@model SignInViewModel


<main id="main">

    
    <form asp-action="Login" asp-controller="Account">

    <section id="recipe" class="recipe">
      <div class="sign-up-container">
        <div class="container">
          <div asp-validation-summary="All" class="text-danger"></div>
          <h1 style="font-family:Bahnschrift ; text-align:center">Sign In</h1>
          <h4 class="h2-sign lead" style="color:black; font-family:Bahnschrift">
            Explore your taste buds and be an AfterTaster
          </h4>
          

            <!-- Email input -->
            <div class="form-floating mb-4">
              <input asp-for="UserName" class="form-control" placeholder="" />
              <label asp-for="UserName"></label>
            </div>

            <!-- Password input -->
            <div class="form-floating mb-4">
                <input asp-for="Password" class="form-control" placeholder=""/>
                <label asp-for="Password"></label>
            </div>

           
            <div class="col-sm-5">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe">
                    </label>
                </div>
            </div>

            <div class="text-center">
               <p>Don't have an account yet? <a asp-area="" asp-controller="Account" asp-action="Register"> Sign Up</a>! </p>
              <button type="submit" class="sign-up-button">Sign In</button>
            </div>


        </div>
        
      </div>
    </section><!-- Top Recipe Section -->
    </form>

  </main><!-- End #main -->